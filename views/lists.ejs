<% layout('layout/boilerplate') %>
<div class="container d-flex  row justify-content-center mb-3 ">
    <div class="col-7 offset-1 text-center mt-3">
        
      <h1 class="mb-3">My lists</h1>
        
          <% if(user.lists.length) {%> 
            <% user.lists.forEach((list,i)=>{ %>
                <div class="d-flex list-group mb-2 shadow  mb-3 bg-white rounded row">
                    <a href="/lists/<%= list._id %> " class="list-group-item list-group-item-action" aria-current="true">
                      <div class="container ms-auto me-auto text-center ">
                        <h5 class="mb-1 ">List <%= i+1 %> </h5>
                        <small >Date:<%= list.date %> </small><br>
                        <small>Time:<%= list.time %> </small>
                      </div>
                      <div class="mt-2 mb-2  text-center">
                        <small>
                          <form class=" " action="/lists/<%= list._id %>?_method=DELETE " method="post">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                      </small>
                      </div>
                      
                    </a>
                  </div>
                  
                  
                <% }) %>
              <% }else{ %>
                <p class="text-muted">No lists </p>
                <% } %>  
        
        <form action="/lists/new" method="post">
            <button class="btn btn-success ">Add new List</button>
        </form>
    </div>
</div>
    

        