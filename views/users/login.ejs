<% layout('layout/boilerplate') %>
<div class="container col-11 mt-5">
    <h1 class="mt-3">Login</h1>
    <form action="/login" method="POST" class="validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label fw-bold">Username</label>
            <input type="text" class="form-control" name="username" id="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <div class="mb-3">
            <label for="password" class="form-label fw-bold">Password</label>
            <input type="password" class="form-control" name="password" id="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-success text-center">Login</button>
        
        <a class="btn" style="background-color: #dd4b39;" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            <p class="container d-inline">Sign in with google</p>
        </a>
        </div>
        
        
        
    </form>
    
</div>
